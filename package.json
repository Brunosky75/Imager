{
  "name": "imager.js",
  "version": "0.5.0",
  "description": "Imager.js is an alternative solution to the issue of how to handle responsive image loading, created by developers at BBC News.",
  "main": "index.js",
  "scripts": {
    "test": "npm run test-pre && ./node_modules/karma/bin/karma start",
    "test-pre": "exit 0",
    "test-watch": "./node_modules/karma/bin/karma start --auto-watch --no-single-run",
    "build": "npm run build-core && npm run build-dist",
    "build-core": "browserify ./index.js -d -s Imager -o Imager.js",
    "build-dist": "uglifyjs ./Imager.js -c -m -o ./Imager.min.js --source-map ./Imager.map.js && mv -f Imager.{map,min}.js ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/BBC-News/Imager.js.git"
  },
  "keywords": [
    "responsive",
    "srcset",
    "images",
    "resize",
    "polyfill",
    "shim",
    "img",
    "PictureFill"
  ],
  "license": "Apache-2.0",
  "browserify": {
    "transform": [
      ["babelify", {"loose": "all"}]
    ]
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "components-jquery": "git://github.com/components/jquery.git#1.10.2",
    "expect.js": "^0.3.1",
    "jshint": "^2.4.3",
    "karma": "^0.12.31",
    "karma-browserstack-launcher": "^0.1.1",
    "karma-chrome-launcher": "^0.1.0",
    "karma-expect": "^1.0.0",
    "karma-firefox-launcher": "^0.1.3",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-ievms": "^0.0.4",
    "karma-mocha": "^0.1.9",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sinon": "^1.0.3",
    "mocha": "^2.2.4",
    "sinon": "^1.8.1",
    "uglify-js": "^2.4.3",
    "watchify": "^3.1.2"
  },
  "dependencies": {
    "babelify": "^6.0.2"
  }
}
